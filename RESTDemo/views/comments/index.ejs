            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 ">
                    <h1>Daily</h1>
                    <ul class="list-group pt-1">
                        <% for (let c of comments) {%>
                            <li class="list-group-item">
                                <%= c.comment %> <span>&#10513;</span>
                                    <b>
                                        <%= c.username %>
                                    </b>
                                    <div class="d-flex justify-content-end m-0 p-0" >
                                         <a class="editHover" href="/comments/<%= c.id %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                            fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path
                                                d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd"
                                                d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>
                                    </div>
                                   



                            </li>
                            <% } %>
                    </ul>

                    <div class="d-flex  align-items-end justify-content-end pt-5 ">
                        <a class="mx-3 p0 costBorder" href="/comments/new">Add to do</a>

                        <a class="costBorder" href="/">Home</a>
                    </div>


                </div>
                <div class="col-1"></div>



            </div>

        </div>




        <%- include('../partials/footer')%>